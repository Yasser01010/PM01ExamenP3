<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomedicina2"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/NombreLogin"
        android:layout_width="255dp"
        android:layout_height="61dp"
        android:drawableLeft="@drawable/ic_baseline_person_2"
        android:ems="10"
        android:hint="   Ingrese Usuario"
        android:inputType="textPersonName"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="#0E0E0E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.579"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/ClaveLogin"
        android:layout_width="254dp"
        android:layout_height="55dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawableRight="@drawable/ic_baseline_visibility_off_24"
        android:ems="10"
        android:hint="   Ingrese Contraseña"
        android:inputType="textPersonName"
        android:longClickable="false"
        android:paddingRight="10dp"
        android:password="true"
        android:textColor="@color/black"
        android:textColorHint="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/Recuperar_Clave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvidaste Tu Contraseña?"
        android:textColor="#070707"
        android:textColorHint="#070707"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/buttonIngresar"
        android:layout_width="208dp"
        android:layout_height="47dp"
        android:backgroundTint="#070707"
        android:drawableRight="@drawable/ic_baseline_login_24"
        android:paddingRight="10dp"
        android:text="Iniciar Seccion"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/buttonRegistroLogin"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:backgroundTint="#090909"
        android:drawableRight="@drawable/ic_baseline_app_registration_24"
        android:paddingRight="10dp"
        android:text="Registrarse"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.856" />


</androidx.constraintlayout.widget.ConstraintLayout>